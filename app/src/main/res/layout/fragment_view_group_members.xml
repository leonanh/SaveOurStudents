
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <TextView
                android:id="@+id/view_group_members_students_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:text="@string/view_group_members_students"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/primary" />

            <ListView
                android:id="@+id/view_group_members_students_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/view_group_members_students_title"
                android:layout_below="@id/view_group_members_students_title"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="24dp"
                android:divider="@null"></ListView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/view_group_members_tutors_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_group_members_students_listView"
                    android:paddingTop="24dp"
                    android:paddingLeft="24dp"
                    android:text="@string/view_group_members_tutors"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/primary" />

                <ListView
                    android:id="@+id/view_group_members_tutors_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/view_group_members_tutors_title"
                    android:layout_below="@id/view_group_members_tutors_title"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="24dp"
                    android:divider="@null"></ListView>


                </RelativeLayout>


        </LinearLayout>




    </android.support.v7.widget.CardView>
