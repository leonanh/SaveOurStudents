<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/test"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:src="@drawable/custom_info_bubble"
        android:scaleType="fitXY"
        android:tint="@color/divider_color"/>

    <ImageView
        android:id="@+id/user_image_details"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/defaultprofile"
        android:layout_alignTop="@+id/test"
        android:layout_alignRight="@+id/test"
        android:layout_alignLeft="@+id/test"
        android:layout_alignBottom="@+id/test"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"/>

</RelativeLayout>