<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutme_layout"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/profile_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/primary_text"
        />
    <TextView
        android:id="@+id/profile_mySchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_school"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/profile_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_school"
        android:layout_marginLeft="5dp"
        android:textColor="@color/primary_text"/>
    <TextView
        android:id="@+id/profile_myMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_major"
        android:layout_below="@id/profile_school"
        android:layout_marginLeft="5dp"
        android:textColor="@color/primary_text"/>
    <TextView
        android:id="@+id/profile_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_major"
        android:layout_marginLeft="5dp"
        android:textColor="@color/primary_text"/>
    <TextView
        android:id="@+id/profile_myDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_description"
        android:layout_marginLeft="5dp"
        android:textColor="@color/primary_text"/>
</RelativeLayout>