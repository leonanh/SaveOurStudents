<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true" >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--
        <com.andexert.library.RippleView
            xmlns:ripple="http://schemas.android.com/apk/res-auto"
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ripple:rv_color="@color/primary">
-->
            <ImageView
                android:id="@+id/question_user_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/defaultprofile"/>


            <TextView
                android:id="@+id/question_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="My Name"
                android:textSize="15sp"
                android:textColor="@color/primary_dark"
                android:layout_toRightOf="@+id/question_user_image"
                android:textIsSelectable="false"
 />

            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_below="@+id/question_name_text"
                android:layout_toRightOf="@+id/question_user_image"
                android:layout_margin="1dp"
                android:text="Let's have an all nighter in the dungeon! I'll grab my laptop and we can pair program"
                android:textSize="13sp"
                android:ellipsize="end" />


            <TextView
                android:id="@+id/question_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/time_dist_hint"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:text="3h"
                android:layout_alignBottom="@+id/question_name_text" />

<!--
        </com.andexert.library.RippleView>
    -->
    </RelativeLayout>
    </android.support.v7.widget.CardView>


