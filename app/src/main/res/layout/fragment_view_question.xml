<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/question_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/defaultprofile"
            app:border_color="@color/primary_light"
            app:border_width="2dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/question_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="My Name"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/question_image"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/question_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@+id/question_name_text"
            android:layout_marginTop="1dp"
            android:textSize="12sp"
            android:text="3 hours ago"
            android:layout_toRightOf="@+id/question_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150 m"
            android:textColor="@android:color/black"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/question_timestamp"
            />

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@+id/question_image"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:text="Anyone wanna code? I'l be sitting over in the dungeon in B240 working on Rick's PA3"
            android:ellipsize="end" />

        <com.rey.material.widget.Button
            style="@style/Material.Drawable.Ripple.Touch"
            android:id="@+id/join_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join"
            android:layout_below="@+id/tag_list"
            app:rd_enable="true"/>


        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_below="@+id/question_text"
            android:id="@+id/tag_list"
            android:scrollbars="none"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag_list_layout">
            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_view"
        android:layout_above="@+id/comment_edittext" />


    <EditText
        android:id="@+id/comment_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add a comment"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/send_button"
        android:autoText="true" />


    <ImageView
        android:id="@+id/send_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_menu_send"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/comment_edittext"/>



</RelativeLayout>