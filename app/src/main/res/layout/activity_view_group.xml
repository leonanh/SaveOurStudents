<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sos.saveourstudents.ViewGroupActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/view_group_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:minHeight="?attr/actionBarSize"
        android:elevation="2dp"
        />

    <com.sos.saveourstudents.supportclasses.SlidingTabLayout
        style="@style/Material.Widget.TabPageIndicator"
        android:id="@+id/view_group_tabPage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/view_group_toolbar"
        android:background="@color/primary"
        android:elevation="2dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_group_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_group_tabPage"
        android:background="@android:color/white"/>

</RelativeLayout>
